package Pruebas;
import java.util.Scanner;
public class Renos {
public static void main(String[] args) {
	int nieve;
	int i=0;
	String almoadilla="#";
	String pista="";
	int numerorenos=0;
	Scanner usuarioreno= new Scanner(System.in);
	System.out.println("Dime longitud de pista:");
	nieve=usuarioreno.nextInt();
	System.out.println("Dime cuantos renos:");
	numerorenos=usuarioreno.nextInt();
	
	while (nieve > i){
		
		pista= pista+almoadilla;
		i++;
		}
		
	int[] renos=new int[numerorenos];
	
	for (i=0; numerorenos>i;i++) {
		
		System.out.println("@"+pista+"@"+i+1);

		
	}
	
	
	
	}
}
