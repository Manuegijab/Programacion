package boletintablas;
import java.util.Scanner;
public class Ejercicio3 {
public static void main(String[] args) {
	int numeros[]= {1,3,4,6,8};
	Scanner numerousuario=new Scanner(System.in);
	System.out.println("Dime un numero");
	int numeroelegido=numerousuario.nextInt();
	
	if (numeroelegido<numeros[0]) {
		System.out.println("Estaria en la posicion 0");
	}
	else if(numeroelegido==numeros[0]) {
		System.out.println("Está en la posicion 0");
		
	}
	else{
		if (numeroelegido<numeros[1]) {
			System.out.println("Estaria en la posicion 1");
		}
		else if(numeroelegido==numeros[1]) {
			System.out.println("Está en la posicion 1");
			
		}
		else{
			if (numeroelegido<numeros[2]) {
				System.out.println("Estaria en la posicion 2");
			}
			else if(numeroelegido==numeros[2]) {
				System.out.println("Está en la posicion 2");
				
			}
			else{
				if (numeroelegido<numeros[3]) {
					System.out.println("Estaria en la posicion 3");
				}
				else if(numeroelegido==numeros[3]) {
					System.out.println("Está en la posicion 3");
					
				}
				else{
					if (numeroelegido<numeros[4]) {
						System.out.println("Estaria en la posicion 4");
					}
					else if(numeroelegido==numeros[4]) {
						System.out.println("Está en la posicion 4");
						
					}
					else{
						
							System.out.println("Estaria en la posicion 5");
						
			}
		}
	}
}
}
